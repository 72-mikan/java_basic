import java.util.Scanner;

public class kadai3 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		int x, y, countryNum;
		
		x = scan.nextInt();
		y = scan.nextInt();
		countryNum = scan.nextInt();
		
		System.out.println(countryNum);
		
		int[][] countryList = new int[countryNum][3];
		int i, j;
		System.out.println(countryList);
		
		for(i = 0; i < countryNum; i++) {
			for(j = 0; j < 3; j++) {
				countryList[i][j] = scan.nextInt();
				System.out.println(countryList[i][j]);
			}
		}
		
		for(i = 0; i < countryNum; i++) {
			System.out.println(countryList[i][0] + " " + countryList[i][1] + " " + countryList[i][2]);
		}
		
		scan.close();
	}

}
