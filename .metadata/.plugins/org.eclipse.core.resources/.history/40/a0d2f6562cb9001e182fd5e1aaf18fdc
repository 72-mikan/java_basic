import java.util.Scanner;

public class kadai3 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		int x, y, countryNum;
		
		x = scan.nextInt();
		y = scan.nextInt();
		countryNum = scan.nextInt();
		
		System.out.println(countryNum);
		
		String[] countryList = new String[countryNum];
		int[][] countryPoint = new int[countryNum][2];
		int i, j;
		
		for(i = 0; i < countryNum; i++) {
			System.out.println(countryList[i].length);
			for(j = 0; j < 2; j++) {
				countrypoint[i][j] = scan.nextInt();
				System.out.println(countryPoint[i][j]);
			}
		}
		
		for(i = 0; i < countryNum; i++) {
			System.out.println(countryList[i][0] + " " + countryList[i][1] + " " + countryList[i][2]);
		}
		
		scan.close();
	}

}
